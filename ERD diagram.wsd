table(usersAndEvents){
    FK user_ID
    FK event_ID
}
usersAndEvents "1" *-- "many" users
usersAndEvents "1" *-- "many" events

table(participantsAndEvents){
    FK participant_ID
    FK event_ID
}
participantsAndEvents "1" *-- "many" participants
participantsAndEvents "1" *-- "many" events

@enduml